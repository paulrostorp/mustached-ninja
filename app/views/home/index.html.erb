
<%= form_for(Tip.new) do |f| %>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body , :rows => "3" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn" %>
  </div>
  <% end %> 

<table class="table table-striped">
    <th>tip</th>
<% @tips.each do |tip| %>

    <tr>
<td><%= tip.body %>
    <%= tip.date  %>
    <%= link_to 'Show', tip %>
<% if current_user == tip.user %>
   <%= link_to edit_tip_path(tip) do %>
   <i class="icon-pencil"></i><%end%>
    <%= link_to tip, method: :delete, data: { confirm: 'Are you sure?' } do %>
       <i class="icon-remove"></i> 
<%end%>


</td></tr>
<%end %>
<% end %>
  </table>

<br />

<%= link_to 'New Tip', new_tip_path %>